<view class="container">
      <view class="title">
           接受性注意
      </view>
      <!--点击生成随机的题目-->
      <button bindtap="testStart" wx:if="{{showButton}}">
             开始挑战
      </button>
      <view wx:if="{{showTable}}">
            <!--渲染4*5的表格，填入生成的随机生成的数值-->
            <view wx:for="{{height}}" wx:for-index="bindIndex1" wx:key="bindIndex1" class="tableLine">
                  <view  wx:for="{{width}}" wx:for-index="bindIndex2" wx:key="bindIndex2" style="font-weight:{{question[bindIndex1*width+bindIndex2].font}}; background-color:{{question[bindIndex1*width+bindIndex2].color}}" class="numberText" bindtap="clickNumber" data-click="{{bindIndex1*width+bindIndex2}}"> 
                  {{question[bindIndex1*width+bindIndex2].number}}
                  </view>
            </view>
      </view>

      <button bindtap="testSubmit" wx:if="{{showTable}}" style="margin-top:20rpx;" disabled="{{dis}}">
            提交
      </button>
      <text wx:if="{{showTable}}" >
      当前得分：{{tips}}
      </text>
      <!--计时器-->
     <view style="margin:30rpx" wx:if="{{showTable}}"> {{timecount}}</view>
</view>
